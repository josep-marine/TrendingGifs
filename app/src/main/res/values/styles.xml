<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="gridview_gif">
        <item name="android:gravity">center</item>
        <item name="android:numColumns">2</item>
        <item name="android:verticalSpacing">@dimen/gridview_spacing_default</item>
        <item name="android:horizontalSpacing">@dimen/gridview_spacing_default</item>
        <item name="android:stretchMode">columnWidth</item>
    </style>

    <style name="gridview_gif_item">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_action_waint</item>
    </style>

</resources>
